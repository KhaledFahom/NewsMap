<fragment 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    map:mapType="hybrid"
    tools:context=".MapActivity" >
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp" 
	    android:paddingBottom="30dp"
	    android:layout_gravity="bottom|end" >
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="end"
	        android:showDividers="middle"
            android:divider="@drawable/transparent_divider" >
            <ImageButton
	            android:id="@+id/search_button"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
				android:background="@drawable/search_location_oval"
				android:layout_gravity="bottom" />
	        <ImageButton
	            android:id="@+id/change_map_type_button"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
				android:background="@drawable/map_type_oval"
				android:layout_gravity="bottom" />
	        <ImageButton
	            android:id="@+id/discover_button"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
				android:background="@drawable/search_more_oval"
				android:layout_gravity="bottom" />
	    </LinearLayout>
    </RelativeLayout>
</fragment>
